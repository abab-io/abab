html
    head
        title Wait...
    body(onload="window.close();self.close();")
        form(action=link, method='post' id='__form__')
            each result, i in data
                if i =='enabled_ps'
                    input(name='enabled_ps[]',value=result[0],type='hidden')
                else
                    input(name=i,value=result,type='hidden')
        #content.container(style='text-align:center')
            svg.spinner(width='65px', height='65px', viewbox='0 0 66 66', xmlns='http://www.w3.org/2000/svg')
                circle.path(fill='none', stroke-width='6', stroke-linecap='round', cx='33', cy='33', r='30')
        style.
            html, body {
                height: 100%;
            }
            body {
                display: -webkit-flex;
                display: -ms-flexbox;
                display: flex;
                -webkit-align-items: center;
                -ms-flex-align: center;
                align-items: center;
                -webkit-justify-content: center;
                -ms-flex-pack: center;
                justify-content: center;
            }
            .spinner {
                -webkit-animation: rotator 1.4s linear infinite;
                animation: rotator 1.4s linear infinite;
            }
            @-webkit-keyframes rotator {
                0% {
                    -webkit-transform: rotate(0deg);
                    transform: rotate(0deg);
                }
                100% {
                    -webkit-transform: rotate(270deg);
                    transform: rotate(270deg);
                }
            }
            @keyframes rotator {
                0% {
                    -webkit-transform: rotate(0deg);
                    transform: rotate(0deg);
                }
                100% {
                    -webkit-transform: rotate(270deg);
                    transform: rotate(270deg);
                }
            }
            .path {
                stroke-dasharray: 187;
                stroke-dashoffset: 0;
                -webkit-transform-origin: center;
                -ms-transform-origin: center;
                transform-origin: center;
                -webkit-animation: dash 1.4s ease-in-out infinite, colors 5.6s ease-in-out infinite;
                animation: dash 1.4s ease-in-out infinite, colors 5.6s ease-in-out infinite;
            }
            @-webkit-keyframes colors {
                0% {
                    stroke: #4285F4;
                }
                25% {
                    stroke: #DE3E35;
                }
                50% {
                    stroke: #F7C223;
                }
                75% {
                    stroke: #1B9A59;
                }
                100% {
                    stroke: #4285F4;
                }
            }
            @keyframes colors {
                0% {
                    stroke: #4285F4;
                }
                25% {
                    stroke: #DE3E35;
                }
                50% {
                    stroke: #F7C223;
                }
                75% {
                    stroke: #1B9A59;
                }
                100% {
                    stroke: #4285F4;
                }
            }
            @-webkit-keyframes dash {
                0% {
                    stroke-dashoffset: 187;
                }
                50% {
                    stroke-dashoffset: 46.75;
                    -webkit-transform: rotate(135deg);
                    transform: rotate(135deg);
                }
                100% {
                    stroke-dashoffset: 187;
                    -webkit-transform: rotate(450deg);
                    transform: rotate(450deg);
                }
            }
            @keyframes dash {
                0% {
                    stroke-dashoffset: 187;
                }
                50% {
                    stroke-dashoffset: 46.75;
                    -webkit-transform: rotate(135deg);
                    transform: rotate(135deg);
                }
                100% {
                    stroke-dashoffset: 187;
                    -webkit-transform: rotate(450deg);
                    transform: rotate(450deg);
                }
            }
        if 'auth' != link && 'pay' != link && 'close' != link
            script(type='text/javascript').
                document.getElementById('__form__').submit();
                setInterval(function () {
                    document.getElementById('__form__').submit()
                }, 3000);
        else
            script(type='text/javascript').
                setInterval(function () {

                    var ww = window.open('', '_self','');
                    ww.close();
                    window.close();
                    document.getElementById('content').innerHTML = '<h2>Success!</h2><br><h4>Close this page please</h2>'
                },3000);


